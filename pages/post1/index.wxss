/* pages/post1/index.wxss */
.page{
  height: 100%;
  width: 100%;
}
.input{
  /* max-height: 30%; */
  height: 30px;
  display: flex;
  max-width: 70%;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 2px 4px;
  margin-left:40px;
  margin-top: 20px;
  margin-bottom: 15px;
  box-sizing: border-box;
  border-style: inset;
  box-shadow: silver;
  /* border-color: darkgray; */
  border-width: 3px;
  border-radius: 5px;
}

.picker{
  height: 12rpx;
  flex-direction: column;
  align-items: 8rpx;
  justify-content: space-between;
  padding: 2rpx 0;  
  box-sizing: border-box;
  margin-left: 55px;
  color: rgb(110, 110, 110);
}

text{
  height: 8rpx;
  flex-direction: column;
  align-items: 8rpx;
  justify-content: space-between;
  padding: 2rpx 0;
  box-sizing: border-box;
  margin-left: 40px;
}

.warning{
  position: relative;
  flex: content;
  height: 8rpx;
  flex-direction: column;
  align-items: 8rpx;
  justify-content: space-between;
  padding: 2rpx 0;
  box-sizing: border-box;
  margin-left: 40px;
  color: red;
}

button{
  display: flex;
  margin-top: 60rpx;
  position: inherit;
  /* flex: content; */
  height: 100rpx;
  flex-direction: column;
  align-items: center;  /* 修改置让不同型号手机也始终居住 */
  justify-content: center;
  padding: 2rpx 0;
  box-sizing: border-box;
  margin-left: 40px;
}